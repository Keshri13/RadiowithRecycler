<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MainActivity">


    <TextView
        android:id="@+id/welcomeEmployeeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/architects_daughter"
        android:text="Welcome \n"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/nextButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeEmployeeTextView">

        <TextView
            android:id="@+id/storeIdTextView"
            android:layout_width="wrap_content"
            android:textSize="23sp"
            android:fontFamily="@font/architects_daughter"
            android:layout_height="wrap_content"
            android:text="Store Number : " />

        <TextView
            android:id="@+id/positionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/architects_daughter"
            android:textSize="23sp"

            android:text="Position : " />

        <TextView
            android:id="@+id/primaryGroupTextView"
            android:fontFamily="@font/architects_daughter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="23sp"
            android:text="Primary Group : " />

        <TextView
            android:id="@+id/locationTextView"
            android:textSize="23sp"
            android:fontFamily="@font/architects_daughter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location : " />

    </LinearLayout>

    <Button
        android:id="@+id/nextButton"
        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="120dp"
        android:text="NEXT"
        android:textSize="23sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>